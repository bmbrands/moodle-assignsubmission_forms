{{!
    @template assignsubmission_forms/fields

    TODO describe template fields

    Example context (json):
    {
        "fields": [
            {
                "id": 1,
                "name": "Field name",
                "num": 1,
                "fieldtypes": [
                    {
                        "name": "text",
                        "label": "Text",
                        "selected": true
                    },
                    {
                        "name": "date",
                        "label": "Date"
                    }
                ],
                "type": "text",
                "required": true,
                "deleted": false,
                "tabs": [
                    {
                        "id": 1,
                        "name": "Tab 1"
                    }
                ]
            }
        ]
    }
}}
{{#fields}}
    {{#tabs}}
        <ul class="nav nav-tabs border-bottom-0" data-tab-id="{{id}}">
            <li class="nav-item">
                <div class="nav-link d-flex align-items-center p-1 bg-light">
                <input type="text" class="form-control form-control-small border-light pe-1" name="tabname{{id}}" data-action="update-tab-name" value="{{name}}">
                <button class="btn btn-icon" data-action="remove-tab" data-fieldid="{{id}}"><i class="fa fa-times fa-fw icon"></i></button>
                </div>
            </li>
        </ul>
    {{/tabs}}
    <div class="card border w-100 mb-3 {{#deleted}}d-none{{/deleted}}" {{#deleted}}data-deleted="1"{{/deleted}} data-region="field" data-fieldid="{{id}}">
        <div class="card-header d-flex align-items-center">
            <span>{{#str}}fieldnumber, assignsubmission_forms, {{num}}{{/str}}</span>
            <button type="button" class="btn btn-secondary btn-sm me-1 icon-no-margin ms-auto" data-action="add-tab" data-fieldid="{{id}}">
                <i class="icon fa-fw fa fa-files-o"></i>
                <span class="visually-hidden">{{#str}}addtab, assignsubmission_forms{{/str}}</span>
            </button>
            <button type="button" class="btn btn-danger btn-sm icon-no-margin" data-action="delete-field" data-fieldid="{{id}}">
                {{#pix}}e/delete, core{{/pix}}
                <span class="visually-hidden">{{#str}}deletefield, assignsubmission_forms{{/str}}</span>
            </button>
        </div>
        <div class="card-body">
            <div class="mb-2 d-flex">
                <label for="field-name">{{#str}}fieldname, assignsubmission_forms{{/str}}</label>
                <input type="text" class="form-control" id="field-name" name="fieldname" value="{{name}}" placeholder="{{#str}}fieldnameplaceholder, assignsubmission_forms{{/str}}">
            </div>

            <div class="mb-2 d-flex">
                <label for="field-type">{{#str}}fieldtype, assignsubmission_forms{{/str}}</label>
                <select class="form-control" id="field-type" name="fieldtype">
                    {{#fieldtypes}}
                        <option value="{{name}}" {{#selected}}selected{{/selected}}>{{label}}</option>
                    {{/fieldtypes}}
                </select>
            </div>

            <div class="mb-2 d-flex">
                <label for="field-name"><span class="visually-hidden">{{#str}}required, assignsubmission_forms{{/str}}</span></label>
                <div class="custom-control custom-switch">
                    <input type="checkbox" class="custom-control-input" id="field-required{{id}}" name="fieldrequired" {{#required}}checked{{/required}}>
                    <label class="custom-control-label" for="field-required{{id}}">{{#str}}required, assignsubmission_forms{{/str}}</label>
                </div>
            </div>
        </div>
    </div>
{{/fields}}
